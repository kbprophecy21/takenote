<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.kyle.takenote.ui.controller.view.HomeViewController"
           styleClass="hb-root">

    <stylesheets>
        <URL value="@/com/kyle/takenote/css/views/homeboard.css"/>
    </stylesheets>

    <BorderPane>

        <center>
            <ScrollPane fitToWidth="true"
                        pannable="true"
                        styleClass="hb-scroll"
                        hbarPolicy="NEVER"
                        vbarPolicy="NEVER"
                        fitToHeight="false">

                <content>
                    <VBox spacing="14" styleClass="hb-content">

                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Home Dashboard" styleClass="hb-subtitle"/>
                        </HBox>

                        <!-- Dashboard grid -->
                        <FlowPane fx:id="board"
                                  hgap="14" vgap="14"
                                  prefWrapLength="900"
                                  styleClass="hb-grid">

                            <!-- Example cards (static for now, weâ€™ll populate later) -->
                            <VBox styleClass="hb-card" prefWidth="320">
                                <Label text="Recent Notes" styleClass="hb-card-title"/>
                                <Label text="Jump back into what you were working on." styleClass="hb-card-subtitle"/>
                                <Region VBox.vgrow="ALWAYS"/>
                                <Button text="Open recent" styleClass="hb-btn"/>
                            </VBox>

                            <VBox styleClass="hb-card" prefWidth="320">
                                <Label text="Today" styleClass="hb-card-title"/>
                                <Label text="Your top tasks for today." styleClass="hb-card-subtitle"/>
                                <Region VBox.vgrow="ALWAYS"/>
                                <Button text="View tasks" styleClass="hb-btn"/>
                            </VBox>

                            <VBox styleClass="hb-card" prefWidth="320">
                                <Label text="Calendar" styleClass="hb-card-title"/>
                                <Label text="Upcoming schedule and reminders." styleClass="hb-card-subtitle"/>
                                <Region VBox.vgrow="ALWAYS"/>
                                <Button text="Open calendar" styleClass="hb-btn-secondary"/>
                            </VBox>

                        </FlowPane>
                    </VBox>
                </content>
            </ScrollPane>
        </center>

    </BorderPane>
</StackPane>
