<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.kyle.takenote.ui.controller.component.card.NoteCardController"
           onMouseClicked="#handleNoteCardClick"
           prefWidth="200"
           prefHeight="200"
           styleClass="note-card">

    <stylesheets>
        <URL value="@../../../css/components/cards/notecard.css"/>
    </stylesheets>

    <!-- optional folded corner -->
    <Region styleClass="note-fold" StackPane.alignment="TOP_RIGHT"/>

    <VBox spacing="6" styleClass="note-card-content">
        <Label fx:id="titleLabel"
               text="Untitled"
               styleClass="note-card-title"/>

        <Label fx:id="bodyLabel"
               text=""
               wrapText="true"
               styleClass="note-card-body"/>

        <Label fx:id="updatedDateLabel"
               text=""
               styleClass="note-card-date"/>
    </VBox>

</StackPane>
