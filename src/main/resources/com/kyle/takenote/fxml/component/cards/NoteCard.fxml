<?xml version="1.0" encoding="UTF-8"?>

<!--Notes: This view will be a Note Card object representing a folder that set on the 
Note Board View itself. This will get created to hold NoteBoardViews objects.
this Card is clickable allowing it open the Note body editor so the user can take notes. -->


<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.kyle.takenote.ui.controller.component.card.NoteCardController"
           
           prefWidth="220" prefHeight="120"
           style="-fx-background-color: #1f1f1f; -fx-background-radius: 14; -fx-padding: 14; -fx-cursor: hand;">
    <VBox spacing="6">
        <Label fx:id="titleLabel"
               text="Untitled"
               style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
        <Label fx:id="bodyLabel"
               text=""
               style="-fx-text-fill: #bbbbbb; -fx-font-size: 12;" />
        <Label fx:id="updatedDateLabel"
               text=""
               style="-fx-text-fill: #bbbbbb; -fx-font-size: 12;" />
    </VBox>
</StackPane>
